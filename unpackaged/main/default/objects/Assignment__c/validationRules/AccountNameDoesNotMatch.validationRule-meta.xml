<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AccountNameDoesNotMatch</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT( ISNEW() ) ,(Account__c  &lt;&gt;  Opportunity__r.AccountId))</errorConditionFormula>
    <errorMessage>Opportunity Account and Assignment Account should be same</errorMessage>
</ValidationRule>
